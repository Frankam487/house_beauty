{
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react/jsx-runtime"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": "off",  // Si vous n'utilisez pas les PropTypes
    "react/jsx-uses-react": "off",  // React 17 et version plus r√©cente n'a plus besoin de React dans les JSX
    "react/jsx-uses-vars": "error"
  }
}
